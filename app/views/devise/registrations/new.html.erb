<div class="w-full max-w-md mx-auto mt-10 p-6 bg-gradient-to-br from-blue-50 to-indigo-100 rounded">
  <h2 class="text-2xl font-bold mb-4">Sign Up</h2>

<div class="bg-white py-8 px-6 shadow-xl rounded-lg">
  
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

         <div class="mb-4">
            <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :first_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-outt" %>
          </div>

          <div class="mb-4">
            <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :last_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out" %>
          </div>

        <div class="field" class="mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out" %>
        </div>

        <div class="field" class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out"  %>
        </div>

        <div class="field" class="mb-4">
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out" %>
        </div>

        <div class="field" class="mb-4">
          <%= f.label :role,  class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :role, options_for_select([['Receptionist', 'receptionist'], ['Doctor', 'doctor']], f.object.role), {prompt: "Select your role"}, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
        </div>
      <% end %>

  </div>
</div>

<%= render "devise/shared/links" %>
