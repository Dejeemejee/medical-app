<div class="container mx-auto px-4 py-6">
  <!-- Header -->
  <div class="mb-6 ml-3">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">Register New Patient</h1>
    <div class="text-sm text-gray-500">
      Add a new patient to the system
    </div>
  </div>

  <!-- Form -->
  <%= render "form", patient: @patient %>

  <!-- Navigation Links -->
  <div class="mt-6">
    <%= link_to "Back to Patients", patients_path, 
        class: "bg-gray-600 hover:bg-gray-700 ml-3 text-white px-4 py-2 rounded-lg transition-colors" %>
  </div>
</div>