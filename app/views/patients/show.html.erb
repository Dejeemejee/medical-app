<div class="container mx-auto px-4 py-6">
  <!-- Header -->
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">
      <%= @patient.first_name %> <%= @patient.last_name %>
    </h1>
    <div class="text-sm text-gray-500">
      Patient Details
    </div>
  </div>

  <!-- Patient Information Card -->
  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Left Column -->
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Email</label>
          <p class="text-gray-900"><%= @patient.email %></p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Phone</label>
          <p class="text-gray-900"><%= @patient.phone %></p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Date of Birth</label>
          <p class="text-gray-900"><%= @patient.date_of_birth %></p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Address</label>
          <p class="text-gray-900"><%= @patient.address %></p>
        </div>
      </div>

      <!-- Right Column -->
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Medical Record #</label>
          <span class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded">
            <%= @patient.medical_record_number %>
          </span>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Assigned Doctor</label>
          <% if @patient.doctor %>
            <span class="bg-green-100 text-green-800 text-sm font-medium px-3 py-1 rounded">
              <%= @patient.doctor.first_name %>
            </span>
          <% else %>
            <span class="bg-red-100 text-red-800 text-sm font-medium px-3 py-1 rounded">
              Not assigned
            </span>
          <% end %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Registered by</label>
          <p class="text-gray-900"><%= @patient.registered_by.first_name %></p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Registered on</label>
          <p class="text-gray-900"><%= @patient.created_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex space-x-4">
    <% if current_user.role == 'receptionist' %>
      <%= link_to "Edit Patient", edit_patient_path(@patient), 
          class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors" %>
    <% end %>
    
    <%= link_to "Back to Patients", patients_path, 
        class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition-colors" %>
  </div>
</div>